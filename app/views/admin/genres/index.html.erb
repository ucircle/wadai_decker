<div class="genre-container">
  <div class='container'>
    <div class='row'>
      <div class='col-md-4'>
        <h4 class="mr-5 mt-5">ジャンル追加</h4>
        <div class="row">
          <%= form_with model: @genre, method: :post do |f| %>
            <p class="genre ml-3">ジャンル名</p>
            <p class="ml-3">
              <%= f.text_field :name %>
              <%= f.submit '新規登録', class: "btn", style: "background-color: #32cd32; color: white; mx-3" %>
            </p>
          <% end %>
        </div>
      </div>
      <div class='col-md-8'>
        <div class="genre-list">
          <h4 class="mt-5">ジャンル一覧</h4>
          <table class='table table-hover table-inverse'>
            <tr>
            </tr>
            <% @genres.each do |genre| %>
              <tr>

                <td><%= genre.name %></td>
                <td><%= link_to "編集する", admin_genres_path(genre.id), class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>