<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
      <div class="container">
        <%= link_to "Wadai decker", root_path, class: "navbar-brand" %>

        <!-- ログインユーザーがいる場合 -->
        <% if customer_signed_in? %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'マイページ', customer_path(current_customer.id), class: 'nav-link' %>
            </li>
          </ul>

        <% elsif admin_signed_in? %>
          <%= link_to "Log out",destroy_admin_session_path, method: :delete, class: "nav-link" %>
        <% else %>
          <!-- ログインユーザーがいない場合 -->
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to 'ログイン', new_customer_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to '新規登録', new_customer_registration_path, class: 'nav-link' %>
            </li>
          </ul>
        <% end %>
      </div>
    </nav>
  </header>